<h1>Event</h1>

<p id='notice' style="color: green"><%= notice %></p>
<p class="alert"><%= alert %></p>

  <h1><%= @event.title %></h1>
<div>
  <%= render '/rsvps/button', event: @event %>
</div>
<div>
  <p>Date: <%= @event.date %></p>
  <p>Location :<%= @event.location %></p>
  <p>Created by: <%= @event.creator.username %></p>
  <p>Event Description:</p>
  <p><%= @event.description %></p>
  <p>Attendees</p>
  <p>Total: <%= @event.rsvps.count %> people</p>
  <p>Names: <%= @usernames %></p>
</div>


<div>
  <%= link_to "Back to events", events_path %>
  <% if Event.future.include?(@event) %>
    <%= link_to "Edit this event", edit_event_path(@event) %> |
    <%= button_to "Destroy this event", @event, method: :delete %>
  <% end %>
</div>