<p style="color: green"><%= notice %></p>
<h1>Events#index</h1>
<p>Find me in app/views/events/index.html.erb</p>

<%= link_to "New Event", new_event_path %>
<h2>All events</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Host</th>
      <th>Attendees</th>
      <th>Title</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody id = "events">
    <% @events.each do |event| %>
      <tr><%= render event %></tr>
    <% end %>
  </tbody>
</table>
<hr>
<h3>Events you're attending:</h3>
  <% @attended_events.each do |event| %>
    <li><%= render event %></li>
  <% end %>
<hr>
<h4>Your Past Events: </h4>
  <% @attended_events.date_passed.each do |event| %>
    <li><%= render event %></li>
  <% end %>
